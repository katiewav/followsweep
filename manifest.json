{
  "manifest_version": 3,
  "name": "FollowSweep",
  "version": "0.1.0",
  "description": "Review and manage your X.com following list with human-in-the-loop unfollow decisions",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*/following",
        "https://twitter.com/*/following"
      ],
      "js": ["content-following.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content-profile.js"],
      "run_at": "document_idle",
      "exclude_matches": [
        "https://x.com/*/following",
        "https://twitter.com/*/following"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
